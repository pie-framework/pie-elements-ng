{
  "name": "@pie-element/element-player",
  "version": "0.1.0",
  "description": "Shared PIE element player web component",
  "type": "module",
  "main": "./dist/pie-element-player.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/pie-element-player.js"
    },
    "./players": {
      "types": "./dist/players/index.d.ts",
      "default": "./dist/pie-element-player.js"
    }
