{
  "name": "@pie-element/shared-math-engine",
  "version": "0.1.0",
  "description": "Modern ESM math engine for PIE input and static rendering",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
