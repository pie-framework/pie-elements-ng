{
  "name": "@pie-element/shared-math-rendering",
  "version": "0.1.0",
  "description": "Core types and utilities for pluggable math rendering in PIE elements",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist tsconfig.tsbuildinfo && vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@pie-element/shared-mathml-to-latex": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.17"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "pie",
    "math",
    "rendering",
    "latex",
    "mathml"
  ],
  "license": "MIT"
}
