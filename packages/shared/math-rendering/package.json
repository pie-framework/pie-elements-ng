{
  "name": "@pie-elements-ng/shared-math-rendering",
  "version": "1.0.0",
  "description": "Framework-agnostic math rendering with KaTeX",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@pie-elements-ng/shared-mathml-to-latex": "workspace:*",
    "katex": "^0.16.27"
  },
  "peerDependencies": {
    "katex": "^0.16.27"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/katex": "^0.16.7",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.17"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "publishConfig": {
    "access": "public"
  }
}
