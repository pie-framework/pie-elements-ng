{
  "name": "@pie-element/shared-theming-daisyui",
  "version": "0.1.0",
  "description": "DaisyUI theme adapter for PIE elements",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist tsconfig.tsbuildinfo && vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@pie-element/shared-types": "workspace:*",
    "@pie-element/shared-theming": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "react": "^18.3.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "@mui/material": "^7.0.0",
    "react": "^18.0.0",
    "daisyui": "^4.0.0",
    "tailwindcss": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "daisyui": {
      "optional": true
    },
    "tailwindcss": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pie-framework/pie-elements-ng.git",
    "directory": "packages/shared/theming-daisyui"
  },
  "homepage": "https://github.com/pie-framework/pie-elements-ng#readme",
