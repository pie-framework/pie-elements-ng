{
  "name": "@pie-elements-ng/shared-test-utils",
  "version": "0.0.0",
  "description": "Testing utilities for PIE elements",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
