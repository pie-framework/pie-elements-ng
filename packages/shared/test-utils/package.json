  },
  "dependencies": {
    "@pie-elements-ng/shared-types": "workspace:*",
    "@pie-elements-ng/shared-utils": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
