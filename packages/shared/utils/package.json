{
  "name": "@pie-element/shared-utils",
  "version": "0.1.0",
  "description": "Shared utilities for PIE elements",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist tsconfig.tsbuildinfo && vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@pie-element/shared-types": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.17"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pie-framework/pie-elements-ng.git",
    "directory": "packages/shared/utils"
  },
  "homepage": "https://github.com/pie-framework/pie-elements-ng#readme",
  "bugs": {
    "url": "https://github.com/pie-framework/pie-elements-ng/issues"
  }
