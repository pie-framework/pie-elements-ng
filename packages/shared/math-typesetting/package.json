{
  "name": "@pie-elements-ng/math-typesetting",
  "version": "1.0.0",
  "description": "Pluggable math typesetting for PIE elements with KaTeX and MathML support",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./adapters/katex": {
      "types": "./dist/adapters/katex.d.ts",
      "default": "./dist/adapters/katex.js"
    },
    "./adapters/mathml": {
      "types": "./dist/adapters/mathml.d.ts",
      "default": "./dist/adapters/mathml.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "katex": "^0.16.27"
  },
  "peerDependenciesMeta": {
    "katex": {
      "optional": true
    }
  },
  "dependencies": {
    "@pie-elements-ng/shared-mathml-to-latex": "workspace:*"
  },
  "devDependencies": {
    "@types/katex": "^0.16.0",
    "katex": "^0.16.27",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.17"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "pie",
    "math",
    "katex",
    "mathml",
    "latex",
    "typesetting",
    "rendering"
  ]
}
