{
  "name": "@pie-element/shared-mathquill",
  "version": "0.1.0",
  "description": "MathQuill fork for PIE Framework - modernized ESM version with matrix support, accessibility, and custom symbols",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./mathquill.css": "./dist/mathquill.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist tsconfig.tsbuildinfo && vite build && bun x tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "jquery": "^3.7.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jquery": "^3.5.31",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "less": "^4.2.0",
    "vite-plugin-static-copy": "^2.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MPL-2.0"
}
