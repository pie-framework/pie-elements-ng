{
  "name": "@pie-element/element-demo",
  "version": "0.1.1",
  "private": true,
  "description": "Shared SvelteKit demo app for any PIE element",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "prebuild": "bun run generate-imports && bun run --cwd ../.. verify:no-local-paths apps/element-demo/src/lib/element-imports.js apps/element-demo/src/lib/element-imports.d.ts",
    "build": "vite build",
    "preview": "vite preview",
    "generate-imports": "bun run scripts/generate-element-imports.ts",
    "predev": "bun run generate-imports && bun run --cwd ../.. verify:no-local-paths apps/element-demo/src/lib/element-imports.js apps/element-demo/src/lib/element-imports.d.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@pie-element/bundler-shared": "workspace:*",
    "@pie-element/element-player": "workspace:*",
    "@tiptap/core": "3.18.0",
    "@tiptap/extension-code-block-lowlight": "3.18.0",
    "@tiptap/extension-document": "3.18.0",
    "@tiptap/extension-history": "3.18.0",
    "@tiptap/extension-text": "3.18.0",
    "debug": "^4.4.3",
    "highlight.js": "^11.11.1",
    "lowlight": "^3.3.0"
  },
  "devDependencies": {
    "@pie-element/multiple-choice": "workspace:*",
    "@pie-element/shared-math-rendering-mathjax": "workspace:*",
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/kit": "^2.50.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "daisyui": "^5.5.14",
    "svelte": "^5.49.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
