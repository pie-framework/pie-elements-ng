{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noEmit": false,
    "skipLibCheck": true,
    "lib": ["ES2022", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "test/**/*",
    "node_modules",
    "dist",
    "src/runtime/bun.ts",
    "src/adapters/sveltekit.ts"
  ]
}
