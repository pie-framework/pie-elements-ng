{
  "name": "@pie-element/cli",
  "version": "0.1.1",
  "description": "CLI tools for managing PIE Elements NG",
  "type": "module",
  "bin": {
    "pie-cli": "./bin/run.js"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "node ./bin/dev.js",
    "lint": "biome check ."
  },
  "dependencies": {
    "@oclif/core": "^4.0.0",
    "@oclif/plugin-help": "^6.2.0",
    "@pie-element/bundler-shared": "workspace:*",
    "es-module-lexer": "^1.7.0",
    "glob": "^13.0.0",
    "open": "^10.0.3",
    "webpack": "^5.104.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "bun-types": "^1.3.5",
    "typescript": "^5.9.3"
  },
  "oclif": {
    "bin": "pie-cli",
    "dirname": "pie-cli",
    "commands": "./dist/commands",
    "topicSeparator": ":",
    "topics": {
      "dev": {
        "description": "Development server and tools"
      },
      "upstream": {
        "description": "Manage synchronization with upstream pie-elements repository"
      },
      "packages": {
        "description": "Generate and manage package configurations"
      },
      "verify": {
        "description": "Verify builds and configurations"
      }
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pie-framework/pie-elements-ng.git",
    "directory": "tools/cli"
  },
  "homepage": "https://github.com/pie-framework/pie-elements-ng#readme",
  "bugs": {
    "url": "https://github.com/pie-framework/pie-elements-ng/issues"
  }
}
